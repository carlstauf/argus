# ARGUS Configuration

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/argus
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# Polymarket API
GAMMA_API_URL=https://gamma-api.polymarket.com
DATA_API_URL=https://data-api.polymarket.com
CLOB_API_URL=https://clob.polymarket.com

# Intelligence Thresholds
FRESH_WALLET_HOURS=72              # Hours for "fresh" wallet detection
WHALE_THRESHOLD_USD=1000           # Minimum bet size for fresh wallet alerts
ANOMALY_SIGMA=2.0                  # Standard deviations for anomaly detection
INSIDER_CONFIDENCE_MIN=0.75        # Minimum confidence for insider alerts

# Alerts
ALERT_COOLDOWN_MINUTES=15
MAX_ALERTS_PER_HOUR=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/argus.log
